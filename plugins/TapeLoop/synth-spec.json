{
  "meta": {
    "name": "Tape Loop",
    "id": "TapeLoop",
    "code": "TpLp",
    "type": "hybrid",
    "voices": 1,
    "description": "Tape-based drone synthesizer with recording, layering, and tape degradation",
    "inspiration": ["William Basinski", "Disintegration Loops", "Tape Loop Artists"]
  },
  "voice": {
    "oscillators": [
      {
        "id": "osc1",
        "sst": "DPWSawOscillator",
        "features": ["level"]
      },
      {
        "id": "osc2",
        "sst": "DPWSawOscillator",
        "features": ["level", "detune"]
      }
    ],
    "filters": [],
    "envelopes": []
  },
  "effects": [
    {
      "id": "tape_loop",
      "sst": "Delay",
